<!DOCTYPE html>
<html lang="hi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/css/patient.css">
  <title>Autodoc</title>
</head>

<body>
  <!-- navbar -->
  <nav class="navbar navbar-expand-lg navbar-light fixed-top">
    <div class="container">
      <a class="navbar-brand" href="#">Auto Doc</a> <button aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#navbarSupportedContent" data-toggle="collapse"
        type="button"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dash Board</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/">Contact</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user/login">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- end navbar -->

  <div class="carousel slide" data-ride="carousel" id="carouselExampleIndicators">
    <ol class="carousel-indicators">
      <li class="active" data-slide-to="0" data-target="#carouselExampleIndicators"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img alt="First slide" class="d-block w-100" src="/pic1.jpg">
        <div class="carousel-caption d-none d-md-block">
          <h2>Welcome</h2>
          <p></p>
        </div>
      </div>
    </div>
    <!-- end-carousel -->
    <h1 class="title1">Patient Name:<%= pres[1].name %></h1>
    <h1 class="title1">Presciption Details:</h1>
    <div class="container">
      <!-- <h1 class="mb-4 mt-4">Presciptions</h1> -->
      <!-- <a href="/articles/new" class="btn btn-success">New Article</a> -->
      <% pres.forEach(article => { %>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Your Prescription</h4>
          <div class="card-subtitle text-muted mb-2">
            <%= article.date.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2"><%= article.med %></div>
          <div class="location">
            <label for="location">Choose Your Location:</label>
            <select name="location" id="location">
              <option value=" ">Location</option>
              <option value="tambaram">Tambaram</option>
              <option value="Ecr">Ecr</option>
              <option value="Omr">Omr</option>
            </select>
          </div>

          <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
          <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
          <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
    <a href="https://video-chat-heroku.herokuapp.com/" class="myButton">Video Call</a>

    <script type="text/javascript">
      var navbar = document.querySelector('nav')

      window.onscroll = function() {

        // pageYOffset or scrollY
        if (window.pageYOffset > 0) {
          navbar.classList.add('scrolled')
        } else {
          navbar.classList.remove('scrolled')
        }
      }
    </script>
</body>

</html>